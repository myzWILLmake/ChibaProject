<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="event_brief_info_time">
        <item name="android:text">Time</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="event_brief_info_place">
        <item name="android:text">Place</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="decision_card_nickname">
        <item name="android:text">Nickname</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="decision_card_type">
        <item name="android:text">修改时间</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="decision_card_button">
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="decision_card_button.agree">
        <item name="android:text">{fa-check}</item>
    </style>
    <style name="decision_card_button.disagree">
        <item name="android:text">{fa-remove}</item>
    </style>
    <style name="decision_card_button.agree.unchecked">
        <item name="android:background">@color/whiteBg</item>
        <item name="android:textColor">@color/green</item>
    </style>
    <style name="decision_card_button.disagree.unchecked">
        <item name="android:background">@color/whiteBg</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="decision_card_button.agree.checked">
        <item name="android:textColor">@color/whiteBg</item>
        <item name="android:background">@color/green</item>
    </style>
    <style name="decision_card_button.disagree.checked">
        <item name="android:textColor">@color/whiteBg</item>
        <item name="android:background">@color/red</item>
    </style>

</resources>
